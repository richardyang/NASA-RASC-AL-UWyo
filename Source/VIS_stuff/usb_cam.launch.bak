<launch>

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" respawn="true" >
  <param name="video_device" value="/dev/video0" />
  <param name="image_width" value="1280" />
  <param name="image_height" value="720" />
  </node>

  <node name="image_proc" pkg="image_proc" type="image_proc" respawn="true" ns="usb_cam" />

  <node name="viewer" pkg="image_view" type="image_view" ns="usb_cam">
  <remap from="image" to="/usb_cam/image_rect_color" />
  <param name="_image_transport" value="theora" />
  </node>


</launch>
